{
  "name": "yunak-quiz",
  "private": true,
  "version": "0.0.0",
  "description": "Yunak Quiz AngularJS application",
  "repository": "https://github.com/SoftServeUniversity/yunakquiz",
  "license": "MIT",
  "devDependencies": {
    "bower": "^1.3.1",
    "http-server": "^0.6.1",
    "karma": "~0.10",
    "karma-junit-reporter": "^0.2.2",
    "protractor": "^1.1.1",
    "shelljs": "^0.2.6",
    "cucumber": "latest"

  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "http-server ./app -a localhost -p 8000 -c-1",
